{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SqlServerConnection": "Server=localhost;Database=ReampDb;Trusted_Connection=True;TrustServerCertificate=True"
  },
  "AllowedHosts": "*",

  "AllowedOrigins": "",

  "JwtSettings": {
    "SecretKey": "YourSuperSecretKeyForJwtTokenGeneration32CharsMinimum!",
    "Issuer": "Reamp.Api",
    "Audience": "Reamp.Client",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },

  "CloudinarySettings": {
    "CloudName": "",
    "ApiKey": "",
    "ApiSecret": "",
    "UseHttps": true,
    "SecureDistribution": true,
    "Folder": "reamp"
  },

  "MediaUploadSettings": {
    "MaxImageSizeBytes": 10485760,
    "MaxVideoSizeBytes": 104857600,
    "AllowedImageTypes": [
      "image/jpeg",
      "image/jpg",
      "image/png",
      "image/webp",
      "image/gif"
    ],
    "AllowedVideoTypes": [
      "video/mp4",
      "video/quicktime",
      "video/webm",
      "video/x-msvideo"
    ],
    "EnableAutoOptimization": true,
    "VideoQuality": "auto",
    "GenerateThumbnails": true,
    "ThumbnailWidth": 640,
    "ThumbnailHeight": 360,
    "ChunkSizeBytes": 5242880
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/reamp-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 14,
          "shared": true,
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  }
}
